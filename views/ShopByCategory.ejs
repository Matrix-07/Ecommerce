    }
    function HideOrShowMenu() {
            var ToggleMenuBar = document.getElementById("MenuBar").style;
            /*var b=document.getElementById("pd");*/
            
            if (ToggleMenuBar.display == "none"  || ToggleMenuBar.display==='') {
                ToggleMenuBar.display = "block";
                ToggleMenuBar.zIndex="1";
            } else {
                ToggleMenuBar.display = "none";
            }
            
            }
    
